<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Warning Message -->
    <record id="view_warning_message_form" model="ir.ui.view">
        <field name="name">warning.message.wizard.form</field>
        <field name="model">warning.message.wizard</field>
        <field name="arch" type="xml">
            <form string="คำเตือน">
                <field name="message" readonly="1" nolabel="1" style="font-weight: bold;"/>
                <footer>
                    <button string="ตกลง" class="btn-primary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 