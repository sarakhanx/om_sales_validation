<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_address_parser" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.address.parser</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Address Parser" name="address_parser">
                    <group>
                        <field name="full_address" placeholder="วางที่อยู่ที่นี่เพื่อกรอกข้อมูลอัตโนมัติ (Paste address here to auto-fill)" class="mb-3" decoration-info="full_address"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo> 